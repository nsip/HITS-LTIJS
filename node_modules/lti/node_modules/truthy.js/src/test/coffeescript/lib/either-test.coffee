bilby = require('bilby')
boolean = require('./boolean')
either = require('./either')
should = require('should')

describe('either', ->
	describe('eitherize()', ->
		f = either.eitherize(boolean.truthy)

		it('should return left if null', -> f(null).isLeft.should.be.true)
		it('should return right if 0', -> f(0).isRight.should.be.true)
		it('should return right if an empty string', -> f('').isRight.should.be.true)
		it('should return right if an empty array', -> f([]).isRight.should.be.true)
		it('should return right if an empty object', -> f({}).isRight.should.be.true)
		it('should return right if true', -> f(true).isRight.should.be.true)
		it('should return left if false', -> f(false).isLeft.should.be.true)
	)
)
