bilby = require('bilby')
boolean = require('./boolean')
option = require('./option')
should = require('should')

describe('option', ->
	describe('optionize()', ->
		f = option.optionize(boolean.truthy)

		it('should return none if null', -> f(null).isNone.should.be.true)
		it('should return some if 0', -> f(0).isSome.should.be.true)
		it('should return some if an empty string', -> f('').isSome.should.be.true)
		it('should return some if an empty array', -> f([]).isSome.should.be.true)
		it('should return some if an empty object', -> f({}).isSome.should.be.true)
		it('should return some if true', -> f(true).isSome.should.be.true)
		it('should return none if false', -> f(false).isNone.should.be.true)
	)
)
