boolean =
	arrayey: (a) ->
		@existy(a) and Array.isArray(a)

	booleany: (a) ->
		@existy(a) and typeof a is 'boolean'

	existy: (a) ->
		a?

	extensibley: (a) ->
		@objecty(a) and Object.isExtensible(a)

	finitey: (a) ->
		(@numbery(a) and isFinite(a)) or (@stringy(a) and @lengthy(a) and isFinite(a))

	frozeny: (a) ->
		@objecty(a) and Object.isFrozen(a)

	functiony: (a) ->
		@existy(a) and typeof a is 'function'

	lengthy: (a) ->
		@existy(a) and ((a.hasOwnProperty('length') and a.length > 0) or (@objecty(a) and Object.keys(a).length > 0))

	nany: (a) ->
		isNaN(a)

	numbery: (a) ->
		@existy(a) and typeof a is 'number'

	objecty: (a) ->
		@existy(a) and typeof a is 'object'

	sealedy: (a) ->
		@objecty(a) and Object.isSealed(a)

	stringy: (a) ->
		@existy(a) and typeof a is 'string'

	truthy: (a) ->
		@existy(a) and (a isnt false)

module.exports = Object.freeze(boolean)
