bilby = require('bilby')
boolean = require('./boolean')

make =
	either: (a, b) ->
		if boolean.truthy(a) then bilby.right(b) else bilby.left(b)

	option: (a, b) ->
		if boolean.truthy(a) then bilby.some(b) else bilby.none

	template: (bfn, mfn) -> (a, b) ->
		mfn(bilby.bind(bfn)(boolean, a)(), a, b)

	validation: (a, b, c) ->
		if boolean.truthy(a) then bilby.success(b) else bilby.failure(c)

module.exports = Object.freeze(make)
